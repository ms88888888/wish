---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
---

<Layout>
    <div class="header">
        <div class="app-name">
            <img src="/assets/heart-icon.svg" alt="WISH.NOW Heart Icon" />
            <span>Wish</span>
        </div>
        <nav class="navigation">
            <a href="#how-it-works">How it works</a>
            <a href="#notifications" class="bell-icon">
                <img src="/assets/bell-icon.svg" alt="Notifications" />
            </a>
        </nav>
    </div>

    <main class="main-content">
 

        <h1 class="headline">Post your wish</h1>
        <p class="sub-headline">Providers will bid to fulfill it</p>

        <button class="btn btn-primary">
            <img src="/assets/plus-icon.svg" alt="Create Wish Icon" />
            Create a wish
        </button>

        <section class="search-browse-section card">
            <div class="search-bar">
                <img src="/assets/search-icon.svg" alt="Search Icon" />
                <input type="text" placeholder="Search wishes by phone or e-mail" />
            </div>
            <button class="btn btn-secondary">Browse wishes</button>
        </section>

        <section class="location-section card">
            <h2 class="card-title">Check wishes in Your Area</h2>
            <div class="map-visual">
                <img src="/assets/map-pin-icon.svg" alt="Map Pin Icon" />
            </div>
        </section>
    </main>
</Layout>

<style>
    /* Scoped styles can be added here if needed, or kept in global.css */
    /* For simplicity, all styles are currently in global.css */
</style>
